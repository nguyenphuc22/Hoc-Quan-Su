<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
>
    <androidx.cardview.widget.CardView
            android:id="@+id/ln_hp"
            android:layout_marginTop="@dimen/layout_marginTop_CardView"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/cardCornerRadius_CardView"
            app:cardElevation="@dimen/cardElevation_CardView"
            app:cardBackgroundColor="@color/colorBackgroundWhite"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="@dimen/layout_width_CardView"
            android:layout_height="@dimen/layout_height_CardView">
        <FrameLayout
                android:background="@drawable/custom_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/img_hp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/layout_marginTop_ImageOfIcon"
                    android:layout_width="@dimen/size_img_main"
                    android:layout_height="@dimen/size_img_main"
                    android:src="@drawable/hp1"
                    android:transitionName="img_title"
            />
            <TextView
                    android:id="@+id/txt_title_hp"
                    android:layout_marginLeft="@dimen/layout_marginLeft_item_menu"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="@dimen/textsize_titleCardView"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/layout_marginTop_titleCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_hp1"
            />
            <TextView
                    android:paddingRight="@dimen/paddingRight_subtit_menu"
                    android:id="@+id/txt_subtitle_hp"
                    android:textSize="@dimen/textsize_subtitleCardView"
                    android:layout_marginLeft="@dimen/layout_marginLeft_item_menu"
                    android:textColor="@color/colorGrey"
                    android:fontFamily="@font/regular"
                    android:text="@string/subtitle_hp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>