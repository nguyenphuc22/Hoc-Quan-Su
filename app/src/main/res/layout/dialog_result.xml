<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/cardCornerRadius_CardView"
        app:contentPadding="@dimen/contentPadding_CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:padding="@dimen/padding_LinerLayout_dialog_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="vertical">
        <TextView
                android:id="@+id/txt_TitleDialog"
                android:text="Title"
                android:textSize="@dimen/textSize_titleQuestion"
                android:fontFamily="@font/regular"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />
        <TextView
                android:layout_marginBottom="@dimen/layout_marginBottom_txtMess_dialog_result"
                android:layout_marginTop="@dimen/textsize_subtitleCardView"
                android:id="@+id/txt_Message"
                android:textSize="@dimen/size_totalSentence_and_time"
                android:fontFamily="@font/regular"
                android:text="Messegaaaaaaaaaaaaaaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/txt_Point"
                android:textSize="@dimen/size_totalSentence_and_time"
                android:fontFamily="@font/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Point"
        />
        <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView"
                android:layout_width="@dimen/size_img_dialog_result"
                android:layout_height="@dimen/size_img_dialog_result"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"

        />

        <RelativeLayout
                android:layout_marginTop="@dimen/layout_marginTop_Relati_dialog_result"
                android:layout_gravity="right|bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/txt_NewExam"
                    android:text="Bài Mới"
                    android:textSize="@dimen/textSize_button"
                    android:fontFamily="@font/regular"
                    android:textAllCaps="true"

                    android:textColor="@color/colorGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:layout_marginRight="@dimen/layout_marginRight_txtNewExam_dialog_result"
                    android:layout_toLeftOf="@id/txt_Result"
            />
            <TextView
                    android:id="@+id/txt_Result"
                    android:text="Kết Quả"
                    android:textAllCaps="true"
                    android:textSize="@dimen/textSize_button"
                    android:fontFamily="@font/regular"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

            />
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>